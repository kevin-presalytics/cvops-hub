{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/db-migrations/db-migrations.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/db-migrations/db-migrations.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/db-migrations/db-migrations.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "bridge-to-kubernetes.resource",
            "type": "bridge-to-kubernetes.resource",
            "resource": "cvops-hub-845f57d6b",
            "resourceType": "pod",
            "ports": [
                5000
            ],
            "targetCluster": "local-ubuntu",
            "targetNamespace": "cvops",
            "useKubernetesServiceEnvironmentVariables": true,
        },
        {
            "label": "bridge-to-kubernetes.compound",
            "dependsOn": [
                "bridge-to-kubernetes.resource",
                "build"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "code-coverage",
            "command": "coverlet",
            "type": "process",
            "args": [
                "./tests/bin/Debug/net6.0/tests.dll",
                "--target",
                "dotnet",
                "--targetargs",
                "test ./tests --no-build",
                "-o",
                "./tests/coverage.json",
            ]
        }
    ]
}