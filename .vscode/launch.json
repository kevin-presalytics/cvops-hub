{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Db Migrations",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}",
        },
        
        {
            "name": "Run Db Migrations",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/db-migrations/bin/Debug/net6.0/db-migrations.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Run Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/api/bin/Debug/net6.0/api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/api",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Run MQTT Controller",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/mqtt-controller/bin/Debug/net6.0/mqtt-controller.dll",
            "args": [],
            "cwd": "${workspaceFolder}/mqtt-controller",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ]
}